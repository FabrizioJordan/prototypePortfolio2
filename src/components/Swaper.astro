---
import cardImage1 from "/src/assets/images/slider/slider-1.jpg"
import cardImage2 from "/src/assets/images/slider/slider-2.jpg"
import cardImage3 from "/src/assets/images/slider/slider-3.jpg"
import cardImage4 from "/src/assets/images/slider/slider-4.jpg"
import cardImage5 from "/src/assets/images/slider/slider-5.jpg"
---

<article class="mb-24">
    <section class="container">
        <div class="card__container swiper">
           <div class="card__content">
              <div class="swiper-wrapper [&>article]:size-96 [&>article]:md:size-[]">

                 <article class="card__article swiper-slide relative">
                    <div class="card__image relative">
                     <img src={cardImage1?.src} alt="image" class="card__img">
                       <div class="card__shadow"></div>
                    </div>
     
                    <div class="card__data">
                    </div>

                 </article>
     
                 <article class="card__article swiper-slide">
                    <div class="card__image">
                     <img src={cardImage2?.src} alt="image" class="card__img">
                       <div class="card__shadow"></div>
                    </div>
     
                    <div class="card__data">
                    </div>

                 </article>
     
                 <article class="card__article swiper-slide">
                    <div class="card__image">
                     <img src={cardImage3?.src} alt="image" class="card__img">
                       <div class="card__shadow"></div>
                    </div>
     
                    <div class="card__data">
                    </div>

                 </article>
     
                 <article class="card__article swiper-slide">
                    <div class="card__image">
                     <img src={cardImage4?.src} alt="image" class="card__img">
                       <div class="card__shadow"></div>
                    </div>
     
                    <div class="card__data">
                    </div>

                 </article>

                 <article class="card__article swiper-slide">
                    <div class="card__image relative">
                     <img src={cardImage5?.src} alt="image" class="card__img">
                       <div class="card__shadow"></div>
                    </div>
     
                    <div class="card__data">
                    </div>

                 </article>
                 
              </div>
           </div>

           <!-- Pagination -->
           <div class="swiper-pagination !bottom-0"></div>
        </div>
     </section>
</article>


<style>

.swiper-wrapper .card__article .card__image{
   position: relative;
}

    .swiper-wrapper .card__article .card__image .card__img{
      width: 370px;
      height: 370px;
      background-size: cover;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;
      transform: scale(1) translateZ(0);
      -webkit-transition: all .3s ease;
      -moz-transition: all .3s ease;
      -ms-transition: all .3s ease;
      -o-transition: all .3s ease;
      transition: all .3s ease;
   }
</style>