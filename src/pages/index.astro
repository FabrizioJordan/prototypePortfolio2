<style>
	.serviceSvg{
		filter: opacity(0.4);
		transition: filter 0.4s ease-in-out;
	}.listOfServices:hover .serviceSvg{
		filter: opacity(1);
	}
	
    .accordion-content {
    	transition: max-height 0.3s ease-out, padding 0.3s ease;
    }

	#erlingText{
		-webkit-text-stroke:1px #000;
		color: transparent;
	}
	#jobCard > span{
		position: relative;
		display: inline-block;
		padding-right: 15px;
		margin-right: 10px;
	}
	#jobCard > span.job::after{
		position: absolute;
		content: "";
		width: 6px;
		height: 6px;
		background-color: rgba(0, 0, 0, .15);
		right: 0;
		top: 50%;
		transform: translateY(-50%);
		border-radius: 100%;
	}
	.listServices li::before{
		position: absolute;
		content: "";
		width: 6px;
		height: 6px;
		background-color: rgba(0, 0, 0, .15);
		border-radius: 100%;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
	}

</style>

